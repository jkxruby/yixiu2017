<%= simple_form_for [:admin, @product] do |f| %>
  <div class="form-product">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.select :category_id, @categories %>
    <%= f.input :quantity %>
    <%= f.input :price %>
    <%= f.input :image, as: :file %>
    <%= f.input :is_hidden %>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..."} %>
<% end %>
