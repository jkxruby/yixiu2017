<%= simple_form_for [:admin, @product] do |f| %>
  <div class="form-product">
    <%= f.input :title, :label => "产品名称" %>
    <%= f.label :friendly_id %>
    <%= f.text_field :friendly_id, :required => true, :class => "form-control" %>
    <p class="help-block">限小写英数字及横线，将作为网址的一部分</p>
    <%= f.input :description, :label => "产品描述" %>
    <%= f.input :recommend, :label => "产品推荐" %>
    <%= f.input :stock_tag %>
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "类别") %>
    <%= f.input :quantity, :label => "产品数量" %>
    <%= f.input :price, :label => "产品价格" %>
    <%= f.label :avatar %>
    <%= f.file_field :avatar, :multiple => true, name: "photos[avatar][]" %>
    <%= f.input :is_hidden %>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..."} %>
<% end %>
