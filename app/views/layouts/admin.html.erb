<!DOCTYPE html>
<html>
<head>
  <title>一休工作室</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <link rel="shortcut icon" href="/favicon.ico">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <%= render "common/navbar" %>
    <div class="row">
      <div class="col-md-2 admin-panel">
        <ul class="nav nav-pills nav-stacked text-center" style="max-width: 300px;">
          <br><br><br><br><br>
          <h3 class="text-center" style="color:#9A584C">管理后台</h3>
          <br>
          <li> <%= link_to("产品", admin_products_path) %></li>
          <hr>
          <li> <%= link_to("订单", admin_orders_path) %></li>
          <hr>
          <li> <%= link_to("类别", admin_categories_path) %></li>
        </ul>
      </div>
      <div class="col-md-10">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
